@model Data.Users

@{
    ViewBag.Title = "Login";
}

@using (Html.BeginForm("Login","Users",FormMethod.Post))
{
    //This is for create form tag
    @Html.AntiForgeryToken()//this is for prevent CSRF attack
    @Html.ValidationSummary(true)
    if(ViewBag.Message!=null){
        <div style="border:1px solid red" >

        </div>
    }
    
    <table>
        <tr>
            <td>@Html.LabelFor(a=>a.Nickname) </td>
            <td>@Html.TextBoxFor(a=>a.Nickname) </td>
            <td>@Html.ValidationMessageFor(a=>a.Nickname) </td>
        </tr>
        <tr>
            <td>@Html.LabelFor(a => a.Password) </td>
            <td>@Html.PasswordFor(a => a.Password) </td>
            <td>@Html.ValidationMessageFor(a => a.Password) </td>
        </tr>
        <tr>
            <td></td>
            <td>
                <input type="submit" value="Login"/>
            </td>
           <td></td>
        </tr>
    </table>
    
}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}